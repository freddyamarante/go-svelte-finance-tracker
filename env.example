# =============================================================================
# ROOT ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains environment variables for both backend and frontend
# Copy this file to .env and modify as needed

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ENV=development
APP_NAME=finance-tracker

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Server Configuration
BACKEND_PORT=6060
BACKEND_HOST=localhost

# Database Configuration
DB_PATH=finance.db

# Logging Configuration
LOG_REQUESTS=true
LOG_SQL=false
LOG_CORS=false

# CORS Configuration
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,HEAD,OPTIONS
CORS_ALLOW_HEADERS=Origin,Content-Length,Content-Type,Accept,Authorization,X-Requested-With
CORS_MAX_AGE=43200

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API Configuration
VITE_API_URL=http://localhost:6060
VITE_APP_NAME=Finance Tracker

# Development Configuration
FRONTEND_PORT=5173
FRONTEND_HOST=localhost

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker Network
DOCKER_NETWORK=finance-network

# Container Names
BACKEND_CONTAINER_NAME=finance-backend
FRONTEND_CONTAINER_NAME=finance-frontend 